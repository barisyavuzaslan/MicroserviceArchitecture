@model CourseUpdateInputModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card-body">
            <h5 class="card-title">Kurs Güncelleme</h5>
            <form asp-controller="Courses" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Picture" />
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
                        <option value="">kategori seçiniz</option>
                    </select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Feature.Duration" class="form-label"></label>
                    <input type="number" asp-for="@Model.Feature.Duration" class="form-control">
                    <span class="text-danger" asp-validation-for="@Model.Feature.Duration"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PhotoFormFile"></label>
                    <input type="file" asp-for="@Model.PhotoFormFile" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Kurs Güncelle</button>
            </form>
        </div>
    </div>
</div>

